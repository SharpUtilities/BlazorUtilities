<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <RootNamespace>Build</RootNamespace>
    <TargetFramework>net10.0</TargetFramework>
    <NoWarn>CS0649;CS0169;CA1050;CA1822;CA2211;IDE1006</NoWarn>
    <NukeRootDirectory>..</NukeRootDirectory>
    <NukeTelemetryVersion>1</NukeTelemetryVersion>
    <Nullable>enable</Nullable>
    <IsPackable>false</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options" Version="10.0.2" />
    <PackageReference Include="Nuke.Common" Version="10.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="..\..\build.cmd">
      <Link>boot\build.cmd</Link>
    </Content>
  </ItemGroup>

    <ItemGroup>
        <InternalsVisibleTo Include="Build.Tests" />
    </ItemGroup>

    <ItemGroup>
      <Compile Update="_Build.Tests\GitHelperTests.cs">
        <Link>Build.Tests\GitHelperTests.cs</Link>
      </Compile>
      <Compile Update="_Build.Tests\ProjectHelperTests.cs">
        <Link>Build.Tests\ProjectHelperTests.cs</Link>
      </Compile>
      <Compile Update="_Build.Tests\VersionHelperTests.cs">
        <Link>Build.Tests\VersionHelperTests.cs</Link>
      </Compile>
      <Compile Update="_Build.Tests\TopologicalSorterTests.cs">
        <Link>Build.Tests\TopologicalSorterTests.cs</Link>
      </Compile>
      <Compile Update="_Build.Tests\GitHelperIntegrationTests.cs">
        <Link>Build.Tests\GitHelperIntegrationTests.cs</Link>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <None Update="_Build.Tests\xunit.runner.json">
        <Link>Build.Tests\xunit.runner.json</Link>
      </None>
    </ItemGroup>

</Project>
